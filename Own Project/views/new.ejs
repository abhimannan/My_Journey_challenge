<% layout('./layout/biolarplate.ejs') -%>
<body>
   <div id="new-ejs" class="offset-0.7" style="width: 40rem;">
      <h2 class="my-3">Add New Book Here...</h2><br>
   <form method="POST" action="/new/create" class="row g-6 needs-validation" novalidate>
      <div class="mt-3">
         <label for="title" class="form-label">Title</label>
         <input type="text" class="form-control" placeholder="Title" name="title" required>
         <div class="invalid-feedback">
             Title Should Be Valid
          </div>
      </div>
      <div class="mt-3">
         <label for="author" class="form-label">Author Name</label>
         <input type="text" class="form-control"
          placeholder="Author" name="author" required>
         <div class="invalid-feedback">
            Author Name Should Be Valid
         </div>
      </div>
      <div class="mt-3">
         <label for="image_url" class="form-label">Image URL / Link</label>
         <input type="text" class="form-control"
          placeholder="URL" name="image_url">
         <div class="invalid-feedback" required>
            URL Should Be Valid
         </div>
      </div>
      <div class="mt-3">
         <label for="price" class="form-label">Book Price</label>
         <input type="number" class="form-control"
          placeholder="Price" name="price">
         <div class="invalid-feedback" required>
            Price Should Be Valid
         </div>
      </div>
      <div class="mt-3">
         <label for="book_type" class="form-label">Book Type</label>
         <input type="text" class="form-control"
          placeholder="Book Type" name="book_type" required>
         <div class="invalid-feedback">
            Book Type Should Be Valid
         </div>
      </div>
      <div class="mt-3">
         <button class="btn btn-warning" type="submit">Add New Book</button>
         
      </div>
            
            
     </form>
   </div>

   <script src="/js/script.js"></script>
</body>
