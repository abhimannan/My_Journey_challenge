<% layout("./layout/boilerplate.ejs") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit the details here</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" class="form-control" value="<%= listing.image %>">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"> <%= listing.description %> </textarea>
        </div>

         <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>">
         </div>

         <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>"><br>
         </div>

         <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>">
         </div>
        
        <button style="color : red" class="btn btn-outline-warning" type="submit"><b>Submit</b></button>
    </form>
    </div>
</div>