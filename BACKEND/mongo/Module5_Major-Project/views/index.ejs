<% layout("./layout/boilerplate.ejs") -%>
<body>
    <h3>All Listing</h3>
    <br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let list of data) { %>
            <a href="/listings/<%= list._id %>" class="listing-link">
            <div class="card col">
            <img src="<%= list.image.url %>"
             class="card-img-top"
              alt="Listing_image"
               style="height:20rem">
            <div class="card-img-overlay"><i class="fa-solid fa-heart"></i></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= list.title %></b><br>
                    <%= Number(list.price).toLocaleString("en-IN") %> / Night

                </p>
            </div>
            </div>
          </a>
    <% } %>
    </div>
    

