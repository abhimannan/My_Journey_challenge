<% layout("./layout/boilerplate.ejs") -%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h4>Listing Details</h4>
  </div>

  <div class="card col-6 offset-3 p-0">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
    
    <div class="card-body">
      <b><p class="card-text"><%= listing.title %></p></b>
      <p><%= listing.description %></p>
      <p><strong>Price:</strong> â‚¹<%= listing.price %></p>
      <p><strong>Location:</strong> <%= listing.location %></p>
      <p><strong>Country:</strong> <%= listing.country %></p>

      <!-- Buttons inside the card -->
      <div class="mt-4">
        <div class="row justify-content-center gap-2">
          
          <!-- Edit Button -->
          <div class="col-12 col-sm-5 col-md-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-success w-100">
              Edit
            </a>
          </div>

          <!-- Delete Button -->
          <div class="col-12 col-sm-5 col-md-4">
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button type="submit" class="btn btn-danger w-100">
                Delete
              </button>
            </form>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
